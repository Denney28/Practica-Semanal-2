@model CafeteriaPS2.Models.Order

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ordenes Pendientes</title>
</head>
<body class="text-warning">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Menu</h4>
        <hr />
        <div class="row text-center">

            <div class="col-lg-4 col-md-3 mb-2">
                <div class="card h-100 bg-success text-white" style="">
                    <img class="card-img-top" src="~/Content/img/cafe21.png" alt="">
                    <div class="card-body">
                        <h4 class="card-title">
                            Cafe Express
                        </h4>
                        <p class="card-text">
                            Elaborado con nuestra mezcla de granos calidad Pluma
                            Hidalgo Oaxaca y el tueste ideal para obtener una bebida equilibrada,
                            con buen cuerpo, excelente aroma y sabor. Puedes saborizarlo con vainilla,
                            caramelo o moka, y endulzarlo a tu gusto.
                        </p>
                    </div>
                    <div class="card-footer">
                        <label>Precio: 20</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-3 mb-2">
                <div class="card h-100 bg-success text-white">
                    <img class="card-img-top" src="~/Content/img/cafe21.png" alt="">
                    <div class="card-body">
                        <h4 class="card-title">Malteada</h4>
                        <p class="card-text">Perfecta combinación de helado de la casa con jarabe de vainilla, lo que la hace una deliciosa bebida para tu antojo.</p>
                    </div>
                    <div class="card-footer">
                        <label>Precio: 15</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-3 mb-2">
                <div class="card h-100 bg-success text-white">
                    <img class="card-img-top" src="~/Content/img/cafe21.png" alt="">
                    <div class="card-body">
                        <h4 class="card-title">Chocolate</h4>
                        <p class="card-text">
                            Delicioso chocolate caliente preparado con leche cremada. Puedes elegir tu leche de preferencia y endulzarlo a tu gusto.
                            * Pídelo frío o caliente
                        </p>
                    </div>
                    <div>
                        <label>Precio: 25</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-3 mb-2">
                <div class="card h-100 bg-success text-white">
                    <img class="card-img-top" src="~/Content/img/cafe21.png" alt="">
                    <div class="card-body">
                        <h4 class="card-title">Cafe</h4>
                        <p class="card-text">
                            Elaborado con nuestra mezcla de granos calidad Pluma Hidalgo Oaxaca y el tueste ideal
                            para obtener una bebida equilibrada, con buen cuerpo, excelente aroma y sabor.
                            Puedes saborizarlo con vainilla, caramelo o moka, y endulzarlo a tu gusto.
                        </p>
                    </div>
                    <div class="card-footer">
                        <label>Precio: 30</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-3 mb-2">
                <div class="card h-100 bg-success text-white">
                    <img class="card-img-top" src="~/Content/img/cafe21.png" alt="">
                    <div class="card-body">
                        <h4 class="card-title">Sandwich</h4>
                        <p class="card-text">
                            Elaborado con pan integral, jamón de pierna, queso manchego y aderezo de chipotle
                        </p>
                    </div>
                    <div class="card-footer">
                        <label>Precio: 10</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-3 mb-2">
                <div class="card h-100 bg-success text-white">
                    <img class="card-img-top" src="~/Content/img/cafe21.png" alt="">
                    <div class="card-body">
                        <h4 class="card-title">Croissant</h4>
                        <p class="card-text">
                            Elaborado con pan integral, jamón de pierna, queso manchego y aderezo de chipotle
                        </p>
                    </div>
                    <div class="card-footer">
                        <label>Precio: 30</label>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <h4>Pedido</h4>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Algun detalle extra que desee agregar o quitar?</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Que Ordenara?</label>
                <div class="col-md-10">
                    @Html.DropDownList("ArticleId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ArticleId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Cuantos va a querer?</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ordenar!" class="btn btn-default btn-outline-primary">
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Cancelar Orden", "Index", "Home")
    </div>
</body>
</html>
